  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f2f4f7;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #1E3A8A; /* biru tua elegan */
      color: #ffffff;
      padding: 20px 30px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header-text {
      text-align: left;
    }

    h2 {
      margin: 0;
      font-size: 26px;
      color: #ffffff;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
    }

    header p {
      margin: 5px 0 0;
      font-size: 16px;
      color: #E0E7FF;
    }

    .logout-btn {
      background-color: #e53e3e;
      color: white;
      padding: 10px 18px;
      border-radius: 5px;
      text-decoration: none;
      font-weight: bold;
      transition: 0.3s;
    }

    .logout-btn:hover {
      background-color: #c53030;
    }

    .menu-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      padding: 40px;
      max-width: 900px;
      margin: 0 auto;
    }

    .menu-card {
      background: white;
      border-radius: 10px;
      padding: 30px;
      text-align: center;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .menu-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    }

    .menu-card a {
      display: block;
      color: #2d3748;
      font-weight: bold;
      font-size: 18px;
      text-decoration: none;
      margin-top: 10px;
    }

    .menu-card span {
      font-size: 40px;
    }

    footer {
      text-align: center;
      padding: 20px;
      background-color: #2d3748;
      color: white;
      position: fixed;
      bottom: 0;
      width: 100%;
    }
  </style>
</head>
