<%- include('partials/header') %>
<link rel="stylesheet" href="/css/admin/admin-income.css">

<header>
  <h2>Pencatatan Pemasukan</h2>
  <a href="/logout" class="logout-btn">Logout</a>
</header>

<div class="grid-container" id="barangGrid">
  <div class="card" data-barang="Oli">🛢️ Oli</div>
  <div class="card" data-barang="Ban">🛞 Ban</div>
  <div class="card" data-barang="Kampas Rem">⚙️ Kampas Rem</div>
  <div class="card" data-barang="Shockbreaker">🧩 Shockbreaker</div>
</div>

<!-- Modal -->
<div id="formModal" class="modal">
  <div class="modal-content">
    <span class="close" id="closeModal">&times;</span>
    <h3 id="modalTitle">Tambah Transaksi</h3>
    <form method="POST" action="/admin/add" id="transaksiForm">
      <input type="hidden" name="jenis" value="income">
      <input type="hidden" name="barang" id="barangInput">

      <label>Tanggal:</label>
      <input type="date" name="tanggal" required>

      <div id="detailFields"></div>

      <button type="submit">Simpan</button>
    </form>
  </div>
</div>

<script src="/js/admin/admin-income.js"></script>

<%- include('partials/footer') %>
