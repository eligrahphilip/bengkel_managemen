  <title>Menu Utama Admin</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f2f4f7;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #2d3748;
      color: white;
      padding: 20px;
      text-align: center;
    }

    h2 {
      margin: 0;
      font-size: 24px;
    }

    .menu-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      padding: 40px;
      max-width: 900px;
      margin: 0 auto;
    }

    .menu-card {
      background: white;
      border-radius: 10px;
      padding: 30px;
      text-align: center;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .menu-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    }

    .menu-card a {
      display: block;
      color: #2d3748;
      font-weight: bold;
      font-size: 18px;
      text-decoration: none;
      margin-top: 10px;
    }

    .menu-card span {
      font-size: 40px;
    }

    footer {
      text-align: center;
      padding: 20px;
      background-color: #2d3748;
      color: white;
      position: fixed;
      bottom: 0;
      width: 100%;
    }

    .logout {
      text-align: center;
      margin-top: 20px;
    }

    .logout a {
      color: white;
      background: #e53e3e;
      padding: 10px 20px;
      border-radius: 5px;
      text-decoration: none;
      transition: 0.3s;
    }

    .logout a:hover {
      background: #c53030;
    }
  </style>
</head>
